<%- include('../partials/head') %>
<%- include('../partials/header') %>
<link rel="stylesheet" href="/css/forms.css">
    <main>
        <div class="form-signup">
            <form action="/products/<%= product.id %>/?_method=PUT" method="POST" class="create-form">
                <h1>EDICIÓN DE PRODUCTO</h1><br><br>
                <div class="control-form">
                    <label for="usuario"><strong>Nombre del Producto</strong></label>
                    <br>
                    <input type="text" name="name" id="id_name" class="control" value="<%= product.name %>" minlength="6" required>
                </div>
                <div class="control-form">
                    <label for="usuario"><strong>Descripción</strong></label>
                    <br>
                    <input type="text" name="description" id="id_description" class="control" value="<%= product.description %>" minlength="6" required>
                </div>
                <div class="control-form">
                    <label for="pass1"><strong>Imagen</strong></label>
                    <br>
                    <input type="file" name="image" id="id_image" class="control" value="<%= product.image %>" required>
                </div>
                <div class="control-form">
                    <label for="pass2"><strong>Categoría</strong></label>
                    <br />
                    <select id="id_category" name="category">
                        <option <%= product.category==="Aventura"? "selected": ""%>>Aventura</option>
                        <option <%= product.category==="RPG"? "selected": ""%>>RPG</option>
                        <option <%= product.category==="Pelea"? "selected": ""%>>Pelea</option>
                        <option <%= product.category==="Deportes"? "selected": ""%>>Deportes</option>
                        <option <%= product.category==="Estrategia"? "selected": ""%>>Estrategia</option>
                    </select>
                </div>
                <div class="control-form">
                    <label for="pass2"><strong>Tamaño(peso)</strong></label>
                    <br>
                    <input type="text" name="weight" id="id_weight" class="control" value="<%= product.weight %>" required>
                </div>
                <div class="control-form">
                    <label for="pass2"><strong>Precio</strong></label>
                    <br>
                    <input type="text" name="price" id="id_price" class="control" value="<%= product.price %>" minlength="2" required>
                </div>
                <div class="form-button">
                    <a href="/iniciar-sesion">
                        <button type="submit" class="btn-form">CANCELAR</button>
                    </a>
                    <a href="/iniciar-sesion">
                        <button type="submit" class="btn-form">EDITAR</button>
                    </a>
                </div>
            </form>
        </div>
    </main>
<%- include('../partials/footer') %>